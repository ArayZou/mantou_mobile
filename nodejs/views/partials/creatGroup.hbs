<div id="creatgroup-model" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title">
                   创建新群组
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="user-name-signup" class="col-sm-2 control-label">名称</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="group_name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="user-name-signup" class="col-sm-2 control-label">组长</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="group_hoster" disabled="disabled" value="{{user.name}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="passwordConfirm" class="col-sm-2 control-label">简介</label>
                        <div class="col-sm-9">
                            <textarea class="form-control" rows="6" id="group_intro"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="creatgroup_submit" type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-globe"></span>
                    创建群组
                </button>
            </div>
        <div>
    </div>
</div>

<div class="login-signup-panel">
    <div id="login-panel" class="modal">
        <div class="modal-dialog">
            <form action="/user/login" method="POST" role="form">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            &times;
                        </button>
                        <h4 class="modal-title">
                           登录
                        </h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="user-name-login" class="col-sm-2 control-label">用户名</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="user-name-login" name="name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="user-pwd-login" class="col-sm-2 control-label">密码</label>
                                <div class="col-sm-9">
                                    <input type="password" class="form-control" id="user-pwd-login" name="password">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-user">
                            </span>
                            登录
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div id="signup-panel" class="modal">
        <div class="modal-dialog">
            <form action="/user/signup" method="POST" role="form">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            &times;
                        </button>
                        <h4 class="modal-title">
                           注册
                        </h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="user-name-signup" class="col-sm-2 control-label">用户名</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="user-name-signup" name="name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="user-pwd-signup" class="col-sm-2 control-label">密码</label>
                                <div class="col-sm-9">
                                    <input type="password" class="form-control" id="user-pwd-signup" name="password">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="passwordConfirm" class="col-sm-2 control-label">密码确认</label>
                                <div class="col-sm-9">
                                    <input type="password" class="form-control" id="passwordConfirm">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-plus"></span>
                            注册
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
